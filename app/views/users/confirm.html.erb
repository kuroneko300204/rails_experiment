<h2>以下の詳細を確認してください</h2>
<%= render 'detail', user: @user %>
<%= form_for @user do |f| %>
  <%= f.hidden_field :first_name %>
  <%= f.hidden_field :last_name %>
  <%= f.hidden_field :email %>
  <%= f.hidden_field :age %>
  <%= f.hidden_field :gender %>
  <%= f.hidden_field :phone_number %>
  <%= f.hidden_field :address %>

  <%= f.submit "送信" %>
  <%= f.submit "戻る", :name => "back" %>
<% end %>